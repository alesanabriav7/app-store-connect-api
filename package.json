{
  "name": "app-store-connect-api",
  "version": "1.0.0",
  "description": "Modular TypeScript App Store Connect API client with Clean Architecture + MVVM feature composition.",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test:watch": "vitest",
    "verify": "pnpm typecheck && pnpm test && pnpm build && pnpm cli -- --help",
    "cli": "node dist/cli/main.js",
    "cli:dev": "npx tsx src/cli/main.ts"
  },
  "keywords": [],
  "author": "Alejandro Sanabria <alesanabriav@gmail.com>",
  "license": "MIT",
  "type": "module",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.29.3",
  "bin": {
    "app-store-connect-api": "dist/cli/main.js"
  }
}
